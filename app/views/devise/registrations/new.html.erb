
<div class="card col-sm-6 mx-auto mt-5">
  <div class="card-body">
    <h2 class="mt-1 mb-3">新規登録</h2>
    <%= form_with model:@user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
     <%= render 'devise/shared/error_messages', model: f.object %> 
 
     <div class="form-group">
      <%= f.label :employee_id_number, "社員番号(５桁以下)", :class => "form-label" %>
       <span class="indispensable">必須</span>
      <%= f.text_field :employee_id_number, autocomplete: "社員番号", :class => "form-control"%>
    </div>

     <div class="form-group">
      <%= f.label :name, "名前（全角）", :class => "form-label" %>
       <span class="indispensable">必須</span>
      <%= f.text_field :name, :class => "form-control"%>
    </div>

      <div class="form-group">
      <%= f.label :name_kana, "名前カナ（全角）", :class => "form-label" %>
       <span class="indispensable">必須</span>
      <%= f.text_field :name_kana, :class => "form-control"%>
    </div>

    <div class="form-group">
      <%= f.label :email, "メールアドレス", :class => "form-label" %>
       <span class="indispensable">必須</span>
      <%= f.email_field :email, :class => "form-control"%>
    </div>
 
    <div class="form-group">
      <%= f.label :password, "パスワード (半角英数字混合6文字以上)", :class => "form-label" %>
       <span class="indispensable">必須</span>
      <%= f.password_field :password, :class => "form-control" %>
    </div>
 
    <div class="form-group">
      <%= f.label :password_confirmation, "もう一度パスワードを入力してください", :class => "form-label" %>
       <span class="indispensable">必須</span>
      <%= f.password_field :password_confirmation, :class => "form-control" %>
    </div>
 
    <div class="actions">
      <%= f.submit "アカウントを作成する", :class => "btn btn-primary btn-block" %>
    </div>
    <% end %>
    <div class="mt-2">
      すでにアカウントをお持ちですか？<%= link_to "サインイン", new_user_session_path %>
    </div>
  </div>
</div>
