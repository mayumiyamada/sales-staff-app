<%= form_with(model: @calendar, local: true) do |form| %>

  <div class="title">
    <%= form.label :タイトル %>
    <%= form.text_field :title %>
  </div>

    <div class="time">
    <%= form.label :開始時間 %>
    <%= form.datetime_select :start_time %>
  </div>

  <div class="content">
    <%= form.label :詳細 %>
    <%= form.text_field :content %>
  </div>


  <div class="submit">
    <%= form.submit %>
  </div>

<% end %>